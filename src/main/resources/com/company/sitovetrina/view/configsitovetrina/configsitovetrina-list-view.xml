<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://configsitovetrinaListView.title"
      focusComponent="configsitovetrinasDataGrid">
    <data>
        <collection id="configsitovetrinasDc"
                    class="com.company.sitovetrina.entity.Configsitovetrina">
            <fetchPlan extends="_base">
                <property name="id"/>
            </fetchPlan>
            <loader id="configsitovetrinasDl" readOnly="true">
                <query>
                    <![CDATA[select e from Configsitovetrina e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="configsitovetrinasDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="configsitovetrinasDataGrid.createAction"/>
            <button id="editButton" action="configsitovetrinasDataGrid.editAction"/>
            <button id="removeButton" action="configsitovetrinasDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="configsitovetrinasDl"/>
        </hbox>
        <dataGrid id="configsitovetrinasDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="configsitovetrinasDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="aboutTesto"/>
                <column property="aboutTesto2"/>
                <column property="aboutTitolo"/>
                <column property="aboutTitolo2"/>
                <column property="cap"/>
                <column property="citta"/>
                <column property="dataUltimaModifica"/>
                <column property="descrizioneSito"/>
                <column property="emailContatti"/>
                <column property="indirizzo"/>
                <column property="linkFacebook"/>
                <column property="linkInsta"/>
                <column property="linkTikTok"/>
                <column property="nomeSito"/>
                <column property="piva"/>
                <column property="ragioneSociale"/>
                <column property="telefono"/>
                <column property="testoFooter"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
